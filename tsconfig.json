{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    },
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "typeRoots": [
      // POPRAWIONA SEKCJA typeRoots
      "./node_modules/@types",
      "./types" // Dodaj ten wiersz, jeśli masz katalog 'types' z własnymi definicjami
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    ".expo/types/react-native-svg.d.ts",
    "@types", // Jeśli to katalog z definicjami, to OK. Jeśli nie, może być zbędne.
    "types", // Jeśli masz taki katalog z plikami .d.ts
    "types/**/*.d.ts", // Dobre, jeśli masz podfoldery w 'types'
    // "src", // Usuń, jeśli nie masz folderu src na głównym poziomie
    "zoomable-view.d.ts" // To jest OK, jeśli plik jest w głównym katalogu projektu
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
  // Usuń starą linię "typeRoots" stąd, jeśli była na końcu pliku poza "compilerOptions"
}
